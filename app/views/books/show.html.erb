<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
　    <%= render 'books/book', user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tboby>
          <tr>
            <td>
              <%= link_to user_path(@book_detail.user) do %>
                <%= attachment_image_tag @book_detail.user, :profile_image, fallback: "no_image.jpg", size:"40x40" %>
                <br>
                <%= @book_detail.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book_detail.id) do %>
                <%= @book_detail.title %>
              <% end %>
            </td>
            <td>
              <%= @book_detail.body %>
            </td>
            <td>
              <% if @book_detail.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book_detail), class:'btn btn-sm btn-success' %>
              <% end %>
            </td>
            <td>
              <% if @book_detail.user == current_user %>
                <%= link_to "Destroy", book_path(@book_detail), method: :delete, "data-confirm" => "本当に消しますか？", class:'btn btn-sm btn-danger'  %>
              <% end %>
            </td>
            <td>
              <% if @book_detail.favorited_by?(current_user) %>
                <%= link_to book_favorites_path(@book_detail), method: :delete do %>
                  ♥<%= @book_detail.favorites.count %>
                <% end %>
              <% else %>
                <%= link_to book_favorites_path(@book_detail), method: :post do %>
                  ♡<%= @book_detail.favorites.count %>
                <% end %>
              <% end %>
            </td>
            <td>
              <p>コメント数:<%= @book_detail.book_comments.count %></p>
            </td>
          </tr>
        </tboby>
      </table>

      <table class="comments">
        <tboby>
          <% @book_detail.book_comments.each do |book_comment| %>
          <tr>
            <td>
              <%= link_to user_path(book_comment.user) do %>
                <%= attachment_image_tag book_comment.user, :profile_image, fallback: "no_image.jpg", size:"40x40" %>
                <br>
                <%=book_comment.user.name %>
              <% end %>
            </td>
            <td>
              <%= book_comment.comment %>
            </td>
            <td>
              <% if book_comment.user == current_user %>
                <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class:'btn btn-sm btn-danger'%>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tboby>
      </table>

      <div class="new-comment">
        <%= form_with(model:[@book_detail, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment, rows:'5',cols:'60' %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>